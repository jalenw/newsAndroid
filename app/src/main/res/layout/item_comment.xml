<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="15dp"
        android:id="@+id/avatar_tv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/my_off" />

    <TextView
        android:textColor="@color/blackText"
        android:id="@+id/name_tv"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_tv"
        android:text="昵称" />
    <TextView
        android:textColor="@color/blackText"
        android:gravity="center_vertical"
        android:id="@+id/point_tv"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:drawablePadding="5dp"
        android:layout_alignBottom="@id/name_tv"
        android:drawableLeft="@mipmap/point_off"
        android:layout_alignParentRight="true"
        android:text="155"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/blackText"
        android:id="@+id/comment_tv"
        android:text="回复"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_toLeftOf="@id/point_tv"
        android:layout_alignBottom="@id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/blackText"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/avatar_tv"
        android:layout_below="@id/name_tv"
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/shape_sub_recycle"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/content_tv"
        android:id="@+id/sub_recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/mode_default_bg"
        android:layout_below="@id/content_tv"
        android:layout_toRightOf="@id/avatar_tv"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>