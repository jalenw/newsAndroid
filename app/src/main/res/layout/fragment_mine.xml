    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mode_default_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:id="@+id/info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_layout_bg"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/add_info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="添加资讯"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <TextView
                    android:id="@+id/manage_info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="管理资讯"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/check_info_v"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <TextView
                    android:id="@+id/check_info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="审核资讯"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_layout_bg"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/share_news_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="邀请朋友一起看新闻"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <TextView
                    android:id="@+id/be_author_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="申请成为作者"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/author_v"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mode_line_gap" />

                <TextView
                    android:id="@+id/notification_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="消息通知"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_layout_bg"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/ads_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="投放广告"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <TextView
                    android:id="@+id/cooperation_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="商务合作"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_layout_bg"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="文字大小"
                        android:textColor="@color/blackText"
                        android:textSize="17sp" />

                    <RadioGroup
                        android:id="@+id/text_mode_rg"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/text_min_rb"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_radio_left"
                            android:button="@null"
                            android:gravity="center"
                            android:text="小"
                            android:textColor="@drawable/tab_text_selector" />

                        <RadioButton
                            android:id="@+id/text_mid_rb"

                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_radio_mid"
                            android:button="@null"
                            android:gravity="center"
                            android:text="标准"
                            android:textColor="@drawable/tab_text_selector" />

                        <RadioButton
                            android:id="@+id/text_max_rb"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_radio_right"
                            android:button="@null"
                            android:gravity="center"
                            android:text="大"
                            android:textColor="@drawable/tab_text_selector" />
                    </RadioGroup>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="阅读模式"
                        android:textColor="@color/blackText"
                        android:textSize="17sp" />

                    <RadioGroup
                        android:id="@+id/light_mode_rg"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/light_white_rb"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="白天"
                            android:textColor="@color/blackText"
                            android:textSize="14dp" />

                        <RadioButton
                            android:id="@+id/light_dark_rb"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="夜间"
                            android:textColor="@color/blackText"
                            android:textSize="14dp" />

                        <RadioButton
                            android:id="@+id/light_auto_rb"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="智能"
                            android:textColor="@color/blackText"
                            android:textSize="14dp" />
                    </RadioGroup>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="要闻推送"
                        android:textColor="@color/blackText"
                        android:textSize="17sp" />

                    <Switch
                        android:id="@+id/push_state_sw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_layout_bg"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/cover_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="新闻封面"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <TextView
                    android:id="@+id/feed_back"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="意见反馈"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/title_et"
                    android:background="@color/mode_line_gap" />

                <TextView
                    android:id="@+id/setting_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>