<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/defaultBG"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="11:53"
            android:textColor="@color/blackText"
            android:textSize="@dimen/assistTextSize" />

        <ImageView
            android:id="@+id/redpoint_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />

        <View
            android:id="@+id/normal_line_v"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/greyRed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_card_bg"
            android:orientation="vertical">

            <TextView
                android:lineSpacingMultiplier="1.2"
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="18dp"
                android:ellipsize="end"
                android:maxEms="17"
                android:maxLines="3"
                android:text="我们是共产主义接班人"
                android:textColor="@color/blackText"
                android:textSize="17sp" />
            <View
                android:visibility="gone"
                android:id="@+id/title_line_v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@color/mode_line_bg" />
            <TextView
                android:visibility="gone"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blackText"
                android:textSize="17sp" />

            <ImageView
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:id="@+id/pic_iv"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/author_ll"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="编辑：李进"
                    android:textColor="@color/assistText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/report_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="举报"
                    android:textColor="@color/assistText"
                    android:textSize="14sp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="5dp"
                android:background="@color/mode_line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/open_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="14dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="10dp"
                    android:text="展开"
                    android:textColor="@color/assistText"
                    android:textSize="14sp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/show_top_iv"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/open_id"
                    android:textColor="@color/redText"
                    android:background="@drawable/shape_top_bg"
                    android:textSize="12sp"
                    android:text="置顶"
                    android:gravity="center"
                    android:layout_width="42dp"
                    android:layout_height="16dp" />

                <ImageView
                    android:id="@+id/share_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="12dp"
                    android:src="@mipmap/share_off" />

                <ImageView
                    android:visibility="gone"
                    android:padding="11dp"
                    android:id="@+id/store_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/share_iv"
                    android:src="@mipmap/store_off" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/point_iv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/store_iv"
                    android:padding="11dp"
                    android:src="@mipmap/commit_ic"
                    android:textColor="@color/redText" />

                <RadioButton
                    android:visibility="gone"
                    android:id="@+id/number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/point_iv"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/redbg"
                    android:button="@null"
                    android:checked="true"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/whiteText"
                    android:textSize="7sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/write_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/point_iv"
                    android:layout_toRightOf="@id/open_id"
                    android:background="@drawable/shape_commit_bg"
                    android:drawableLeft="@mipmap/discolose_off"
                    android:drawablePadding="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="写评论"
                    android:textColor="@color/assistText"
                    android:textSize="14sp" />
            </RelativeLayout>


        </LinearLayout>
         <LinearLayout
             android:visibility="gone"
             android:id="@+id/txtads_ll"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:paddingBottom="10dp"
                 android:paddingTop="10dp"
                 android:text="广告 "
                 android:textColor="@color/whitePress"
                 android:textSize="14sp"
                 />
             <TextView
                 android:id="@+id/ad_text_tv"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:paddingBottom="10dp"
                 android:paddingTop="10dp"
                 android:textColor="@color/assistText"
                 android:textSize="14sp"
                 />
         </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/pic_ad_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        >


        <ImageView
            android:id="@+id/ads_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"/>

        <TextView
            android:textSize="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ads_iv"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="广告"
            android:textColor="@color/whitePress" />
    </RelativeLayout>
</LinearLayout>